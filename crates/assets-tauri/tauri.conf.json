{
  "productName": "RustyAssets",
  "version": "0.1.0",
  "identifier": "com.rustyassets.app",
  "build": {
    "beforeDevCommand": "npm --prefix . run dev",
    "beforeBuildCommand": "./build-ui.sh",
    "devUrl": "http://localhost:5173",
    "frontendDist": "ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "RustyAssets",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for main application",
          "windows": ["main"],
          "permissions": [
            "core:default"
          ]
        }
      ]
    }
  },
  "plugins": {
    "mcp": {}
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
